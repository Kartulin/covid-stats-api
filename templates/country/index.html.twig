{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    <h1>Country index</h1>
    <div class="d-inline count float-end">
        total: {{ countries.getTotalItemCount }}
        {{ knp_pagination_filter(countries, {
            'c.name': 'name' }) }}
    </div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(countries, 'id', 'c.id') }}</th>
            <th{% if countries.isSorted('continent') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'continent', 'c.continent') }}
            </th>
            <th{% if countries.isSorted('code') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'code', 'c.code') }}
            </th>
            <th{% if countries.isSorted('name') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'name', 'c.name') }}
            </th>
            <th{% if countries.isSorted('newConfirmed') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'newConfirmed', 'c.newConfirmed') }}
            </th>
            <th{% if countries.isSorted('TotalConfirmed') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'totalConfirmed', 'c.totalConfirmed') }}
            </th>
            <th{% if countries.isSorted('newDeaths') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'newDeaths', 'c.newDeaths') }}
            </th>
            <th{% if countries.isSorted('totalDeaths') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'totalDeaths', 'c.totalDeaths') }}
            </th>
            <th{% if countries.isSorted('newRecovered') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'newRecovered', 'c.newRecovered') }}
            </th>
            <th{% if countries.isSorted('totalRecovered') %} class="sorted"{% endif %}>
                {{ knp_pagination_sortable(countries, 'totalRecovered', 'c.totalRecovered') }}
            </th>
            <th>UpdatedAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for country in countries %}
            <tr>
                <td>{{ country.id }}</td>
                <td>{{ country.continent | default('--') }}</td>
                <td><p class="d-inline-flex"><img src="{{ asset('flags-malenkie/') }}{{ country.flag }}" alt="flag"/>
                        &nbsp;<strong>{{ country.code }}</strong></p>
                </td>
                <td>{{ country.name }}</td>
                <td>{{ country.newConfirmed | default('--') }}</td>
                <td>{{ country.totalConfirmed | default('--') }}</td>
                <td>{{ country.newDeaths | default('--') }}</td>
                <td>{{ country.totalDeaths | default('--') }}</td>
                <td>{{ country.newRecovered | default('--') }}</td>
                <td>{{ country.totalRecovered | default('--') }}</td>

                <td>{{ country.updatedAt ? country.updatedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('country.show', {'slug': country.slug}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
    <div class="navigation float-end">
        {{ knp_pagination_render(countries) }}
    </div>
{% endblock %}
